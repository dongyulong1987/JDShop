<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#DD3000">

        <ImageView
            android:id="@+id/mime_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_default_user_head" />

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/mime_photo"
            android:text="登陆/注册" />

        <ImageView
            android:id="@+id/tv_mime_setting"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/mime_massage"
            android:padding="5dp"
            android:src="@mipmap/ic_user_setting" />

        <ImageView
            android:id="@+id/mime_massage"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@mipmap/aor" />


        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#C02A00"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_collection_goods"
                android:gravity="center"
                android:text="商品收藏" />

            <TextView
                android:id="@+id/tv_shop_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_collection_store"
                android:gravity="center"
                android:text="店铺收藏" />

            <TextView
                android:id="@+id/tv_my_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_user_footprint"
                android:gravity="center"
                android:text="我的足迹" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_allorder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="6"
            android:drawableLeft="@mipmap/ic_user_order"
            android:text="全部订单"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_normal_dot_left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wait_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_pay"
            android:gravity="center"
            android:text="未付款" />

        <TextView
            android:id="@+id/tv_wait_drive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_drive"
            android:gravity="center"
            android:text="待发货" />

        <TextView
            android:id="@+id/tv_wait_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_receipt"
            android:gravity="center"
            android:text="待收货" />

        <TextView
            android:id="@+id/tv_wait_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_comment"
            android:gravity="center"
            android:text="待评价" />

        <TextView
            android:id="@+id/tv_wait_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_refund"
            android:gravity="center"
            android:text="退款/货" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mymoney"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="6"
            android:drawableLeft="@mipmap/ic_user_property"
            android:text="我的财产"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_normal_dot_left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_property_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_money"
            android:gravity="center"
            android:text="预存款" />

        <TextView
            android:id="@+id/tv_property_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_card"
            android:gravity="center"
            android:text="充值卡" />

        <TextView
            android:id="@+id/tv_property_vouchers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_vouchers"
            android:gravity="center"
            android:text="代金券" />

        <TextView
            android:id="@+id/tv_property_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_red"
            android:gravity="center"
            android:text="红包" />

        <TextView
            android:id="@+id/tv_property_integral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_integral"
            android:gravity="center"
            android:text="积分" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="6"
            android:drawableLeft="@mipmap/ic_user_address"
            android:text="收货地址"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_normal_dot_left" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="6"
            android:drawableLeft="@mipmap/ic_user_setting"
            android:text="系统设置"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_normal_dot_left" />

    </LinearLayout>

</LinearLayout>