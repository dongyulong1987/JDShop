<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#f44c01">
        <Button
            android:id="@+id/cont_left_bun"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="7.8"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ay5"/>
        <EditText
            android:id="@+id/cont_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:hint="搜索一下"
            android:background="#DD3000"
            />
        <Button
            android:id="@+id/cont_right_bun"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="7.5"
            android:background="@drawable/ay7"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cont_paixu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="综合排序"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cont_sell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="销量优先"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cont_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="筛选"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cont_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v7.widget.RecyclerView>



</LinearLayout>