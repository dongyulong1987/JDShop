<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="com.bawie.bawiestore">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/jd_buy_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:replace="android:icon"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activity.BaseActivity"/>
        <activity android:name=".views.activity.GuideActivity"/>
        <activity android:name=".views.activity.MainActivity"/>
        <activity android:name=".views.activity.ContentActivity"/>
        <activity android:name=".views.activity.ContentdetailsActivity"/>
    </application>

</manifest>